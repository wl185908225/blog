extends ../layout_user

block content

  form.form-signin(method="post", action="/admin/users/login")

    h2.form-signin-heading 管理员登陆
      small.pull-right
        a.btn.btn-link.btn-sm(href="/admin/users/register") 注册
    !=messages()
    label.sr-only(for='email') 邮箱
    input.email.form-control(type='email', name="email", placeholder='请输入邮箱', required='', autofocus='')

    label.sr-only(for='password') 密码
    input.password.form-control(type='password',  name="password", placeholder='请输入密码', required='')

    button.btn.btn-lg.btn-primary.btn-block(type='submit') 登录

block scripts
  script(src="/js/admin/user.js")