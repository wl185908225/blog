extends ../layout

block content
	h2.page-header=author._id ? "编辑作者" : "添加作者"

	if errors && errors.length
		div.errors
			each error in errors
				p.alert.alert-danger=error.msg

	form.vartical-form(method="post", action=action)
		div.form-group
			label(for="title") 姓名
			input.form-control.input-lg(name="name",required="true", placeholder="请输入姓名...", value=author.name)

		div.form-group
			label(for="category") 邮箱
			input.form-control.input-lg(name="email",required="true", placeholder="请输入邮箱...", value=author.email)

		div.form-group
			label(for="category") 密码
			input.form-control.input-lg(type="password", name="password",required="true", placeholder="请输入密码...", value=author.password)

		button.btn.btn-lg.btn-info(type="submit")=author._id ?  "保存修改" : "添加作者"

block scripts
	script(src="/js/admin/user.js")
